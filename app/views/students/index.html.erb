<div class="page-header">
  <%= link_to 'New Student', new_student_path, class: 'btn btn-primary pull-right' %>
  <h1>Students (<%= @students.size -%>)</h1>
</div>

<%= paginate @students -%>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Registration</th>
      <th>Birth date</th>
      <th>Status</th>
      <th>Age</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.registration %></td>
        <td><%= student.birth_date %></td>
        <td><%= student.status %></td>
        <td><%= student.age %></td>
        <td><%= l(student.created_at) %></td>
        <td><%=l student.updated_at %></td>
        <td><%= link_to 'Show', student, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @students -%>


