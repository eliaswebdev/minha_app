<div class="page-header">
	<%= link_to 'Cadastrar', new_photo_path, class: 'btn btn-primary pull-right' %>
	<h1>Photos (<%= @photos.size %>)</h1>
</div>
	
<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
			<th>File</th>
			<th>Status</th>
			<th>Created At</th>
			<th>Updated At</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<% @photos.each do |photo| -%>
			<tr>
				<td><%= photo.id -%></td>
				<td><%= photo.title -%></td>
				<td><%= photo.description -%></td>
				<td><%= photo.file -%></td>
				<td><%= photo.status -%></td>
				<td><%= photo.created_at -%></td>
				<td><%= photo.updated_at -%></td>
				<td nowrap="nowrap">
					<%= link_to "Show",      photo_path(photo.id), class: 'btn btn-info' %>
					<%= link_to "Edit", edit_photo_path(photo.id), class: 'btn btn-primary' %>
					
					<%= link_to "Delete",    photo_path(photo.id), class: 'btn btn-danger', 
						data: { 
							confirm: "EstÃ¡ certo disso?",
							method: :delete
						}
					%>
				</td>
			</tr>
		<% end -%>
	</tbody>
</table>



	
