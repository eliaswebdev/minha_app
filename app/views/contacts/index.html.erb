<div class="page-header">
	
	<%= link_to "Cadastrar", new_contact_path, class: 'btn btn-primary pull-right' %>

	<h1>Fale Conosco</h1>
</div>

<table class="table table-bordered table-condensed">
	<thead>
		<tr>
			<th>id</th>
			<th>name</th>
			<th>email</th>
			<th>message</th>
			<th>status</th>
			<th>created_at</th>
			<th>updated_at</th>
			<th>options</th>
		</tr>
	</thead>

	<tbody>
		<% @contacts.each do |contact| %>
		<tr>
			<td><%= contact.id %></td>
			<td><%= contact.name %></td>
			<td><%= contact.email %></td>
			<td><%= contact.message %></td>
			<td><%= contact.status %></td>
			<td><%= contact.created_at %></td>
			<td><%= contact.updated_at %></td>
			<td> 
				<%= link_to "Show", contact, class: 'btn btn-info' %>
				<%= link_to "Edit", edit_contact_path(contact), class: 'btn btn-primary' %>
				<%= link_to "Delete", contact, 
					data: {
						method: :delete,
						confirm: 'Tem certeza?'
					},
					class: 'btn btn-danger'
				%>
			</td>
		</tr>
		<% end -%>
	</tbody>
	
</table>

